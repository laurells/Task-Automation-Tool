<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutomationApp.Gui.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AutomationApp.Gui.MainWindow"
        Title="Task Automation Dashboard">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel Margin="20" Spacing="12">
            <TextBlock Text="Automation Rules" FontSize="24" FontWeight="Bold" />
            <ItemsControl Items="{Binding Rules}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding RuleName}" />
                            <Button Content="Run"
                                    Command="{Binding DataContext.RunCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding RuleName}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Run All Rules" Command="{Binding RunAllCommand}" Margin="0,20,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>