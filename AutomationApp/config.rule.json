{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["type"],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["filemoverule", "bulkemailrule", "dataprocessingrule"]
      },
      "name": { "type": "string" },
      "source": { "type": "string" },
      "target": { "type": "string" },
      "supportedExtensions": { "type": "array", "items": { "type": "string" } },
      "addTimestamp": { "type": "boolean" },
      "backupFiles": { "type": "boolean" },
      "csvPath": { "type": "string" },
      "dataPath": { "type": "string" },
      "requiredColumns": { "type": "array", "items": { "type": "string" } }
    }
  }
}
