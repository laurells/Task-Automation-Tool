{
  "Email": {
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "UseSmtpSsl": true,
    "Email": "your-email@example.com",
    "Password": "your-password",
    "ImapHost": "imap.example.com",
    "ImapPort": 993,
    "UseImapSsl": true
  },
  "File": {
    "DefaultSourceDirectory": "C:\\Watch",
    "DefaultTargetDirectory": "C:\\Sorted",
    "SupportedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".txt",
      ".csv",
      ".json",
      ".xml"
    ],
    "CreateBackup": true,
    "BackupDirectory": "C:\\Backup"
  },
  "Logging": {
    "LogLevel": "Info",
    "LogDirectory": "C:\\Logs",
    "EnableConsoleOutput": true,
    "EnableFileLogging": true,
    "EnableErrorLogging": true
  },
  "Rules": [
    {
      "Type": "FileMoveRule",
      "Name": "MovePDFsToSorted",
      "Settings": {
        "source": "C:\\Watch",
        "target": "C:\\Sorted"
      },
      "Enabled": true,
      "Schedule": "* * * * *"
    },
    {
      "Type": "BulkEmailRule",
      "Name": "SendDailyReports",
      "Settings": {
        "csv": "recipients.csv"
      },
      "Enabled": true,
      "Schedule": "0 9 * * 1-5"
    }
  ]
}
